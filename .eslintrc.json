{
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2015
	},
	"rules": {
		"arrow-parens": ["error", "always"],
		"curly": ["error", "multi-or-nest", "consistent"],
		"id-length": "off",
		"no-bitwise": ["error", { "int32Hint": true }],
		"no-cond-assign": "off",
		"operator-linebreak": ["error", "before", { "overrides": { "+": "after" } }]
	},
	"env": {
		"node": true,
		"es6": true
	},
	"globals": {
		"Phaser": true,
		"window": true,
		"PIXI": true,
		"p2": true,
		"CocoonJS": true
	}
}
